{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "${AZURE_LOCATION}"
    },
    "entraAppDisplayName": {
      "value": "Azure MCP Server API"
    },
    "acaName": {
      "value": "azure-mcp-server"
    },
    "foundryProjectResourceId": {
      "value": "${FOUNDRY_PROJECT_RESOURCE_ID}"
    },
    "appInsightsConnectionString": {
      "value": "${APP_INSIGHTS_CONNECTION_STRING=}"
    },
    "useExistingAcaEnvironment": {
      "value": "${USE_EXISTING_ACA_ENVIRONMENT=false}"
    },
    "existingAcaEnvironmentName": {
      "value": "${EXISTING_ACA_ENVIRONMENT_NAME=}"
    },
    "existingAcaEnvironmentResourceGroup": {
      "value": "${EXISTING_ACA_ENVIRONMENT_RESOURCE_GROUP=}"
    },
    "readOnlyMode": {
      "value": "${READ_ONLY_MODE=false}"
    },
    "containerRegistryServer": {
      "value": "${CONTAINER_REGISTRY_SERVER}"
    },
    "containerImageName": {
      "value": "${CONTAINER_IMAGE_NAME=azure-mcp-custom:latest}"
    },
    "containerRegistryUsername": {
      "value": "${CONTAINER_REGISTRY_USERNAME}"
    },
    "containerRegistryPassword": {
      "value": "${CONTAINER_REGISTRY_PASSWORD}"
    },
    "cosmosDbAccountName": {
      "value": "${COSMOSDB_ACCOUNT_NAME=}"
    }
  }
}